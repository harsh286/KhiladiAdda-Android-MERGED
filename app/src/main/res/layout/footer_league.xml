<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation_5"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_my_league"
        style="@style/ButtonBottom"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_trophy"
        android:text="@string/text_my_league" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_participant"
        style="@style/ButtonBottom"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_username"
        android:text="@string/text_participant" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create"
        style="@style/ButtonBottom"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_create_team"
        android:text="@string/text_create_team" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        style="@style/ButtonBottomLast"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_plus"
        android:text="@string/text_join_team" />

</LinearLayout>