<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LeagueCardAppearance"
    android:layout_marginTop="8dp"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/live_league_rect"
        android:layout_height="@dimen/dimen_70dp">
        <ImageView
            android:id="@+id/img_lg_image"
            android:layout_width="48dp"
            android:src="@drawable/freefire"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_height="48dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/img_lg_image"
            android:layout_toLeftOf="@+id/tv_view_room_code"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            android:fontFamily="@font/rowdies_regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:id="@+id/tv_view_room_code"
            android:layout_width="130dp"
            android:textSize="@dimen/text_12"
           android:paddingStart="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/live_league_btn_rect"
            android:layout_height="@dimen/dimen_32dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="@string/txt_view_id_and_password"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>