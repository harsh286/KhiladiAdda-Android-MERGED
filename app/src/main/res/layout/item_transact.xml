<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemCardAppearance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_1"
        android:background="@drawable/textview_background_black">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_5"
            android:padding="@dimen/padding_3"
            android:textColor="@color/color_green"
            android:textSize="@dimen/text_9" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@+id/tv_type"
            android:padding="@dimen/padding_2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_amount"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@+id/tv_type"
            android:padding="@dimen/padding_2"
            android:textColor="@color/colorgreen"
            android:textSize="@dimen/text_9" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wallet"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@+id/tv_type"
            android:padding="@dimen/padding_2"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_9" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_3"
            android:layout_toStartOf="@+id/tv_type"
            android:padding="@dimen/padding_2"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_9" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/border_bottom_white"
            android:layout_marginBottom="@dimen/margin_1"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="@string/text_check_status"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:text="@string/text_view_invoice"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_11"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>