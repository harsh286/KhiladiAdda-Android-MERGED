<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_batmanselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_batmanselected"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/two_raider"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        app:layout_constraintEnd_toEndOf="@+id/iv_batmanselected"
        app:layout_constraintStart_toStartOf="@+id/iv_batmanselected"
        app:layout_constraintTop_toBottomOf="@+id/iv_batmanselected" />

    <ImageView
        android:id="@+id/iv_bowlselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected"
        app:layout_constraintBottom_toBottomOf="@+id/iv_batmanselected"
        app:layout_constraintStart_toEndOf="@+id/iv_batmanselected"
        app:layout_constraintTop_toTopOf="@+id/iv_batmanselected" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bowlselected"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/two_def"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        app:layout_constraintEnd_toEndOf="@+id/iv_bowlselected"
        app:layout_constraintStart_toStartOf="@+id/iv_bowlselected"
        app:layout_constraintTop_toBottomOf="@+id/iv_bowlselected" />

    <ImageView
        android:id="@+id/iv_arselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/iv_bowlselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintStart_toEndOf="@+id/iv_bowlselected"
        app:layout_constraintTop_toTopOf="@+id/iv_bowlselected" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_arselected"
        android:layout_toEndOf="@id/iv_bowlselected"
        android:gravity="center"
        android:text="@string/two_ar"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="@+id/iv_arselected"
        app:layout_constraintStart_toStartOf="@+id/iv_arselected"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <ImageView
        android:id="@+id/iv_allselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/iv_arselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_notselectedcircle"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintStart_toEndOf="@+id/iv_arselected"
        app:layout_constraintTop_toTopOf="@+id/iv_arselected" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_allselected"
        android:layout_toEndOf="@id/iv_arselected"
        android:gravity="center"
        android:text="@string/ready"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="@+id/iv_allselected"
        app:layout_constraintStart_toStartOf="@+id/iv_allselected"
        app:layout_constraintTop_toTopOf="@+id/textView19" />


</androidx.constraintlayout.widget.ConstraintLayout>