<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/text_10"
    style="@style/LeagueCardAppearance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wining_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button_green"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue_dark"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_5"
                android:text="@string/text_accept"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contest_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_dark"
                android:textSize="@dimen/text_11"
                android:textStyle="bold"
                tools:text="LUDO1234566778" />
            <TextView
                android:id="@+id/tv_mode"
                style="@style/TextLudoMode" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_contest"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toStartOf="@+id/iv_profile_player"
            android:layout_toEndOf="@+id/iv_profile"
            android:gravity="center"
            android:textColor="@color/lighter_black"
            android:textSize="@dimen/text_13"
            tools:text="100000.00 Coins" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toStartOf="@+id/tv_player_name"
            android:layout_toEndOf="@+id/tv_captain_name"
            android:gravity="center"
            android:padding="@dimen/padding_3"
            android:textColor="@color/color_green"
            android:textSize="@dimen/text_15"
            tools:text="100000.00 Coins" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_amount"
            android:gravity="center"
            android:padding="@dimen/padding_3"
            android:textColor="@color/lighter_black"
            android:textSize="@dimen/text_11"
            tools:text="100000.00 Coins" />

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile_player"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_9"
            tools:text="100000.00 Coins" />

        <TextView
            android:id="@+id/tv_captain_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile"
            android:gravity="center"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_9"
            tools:text="HASRH PRASAD SATYARAM" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/colorPrimaryDark"
            app:civ_shadow_radius="5" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_profile_player"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_20"
            android:padding="@dimen/padding_2"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/colorPrimaryDark"
            app:civ_shadow_radius="5" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>