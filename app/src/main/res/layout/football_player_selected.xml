<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_batmanselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_batmanselected"
        android:layout_alignStart="@+id/iv_batmanselected"
        android:layout_alignEnd="@+id/iv_batmanselected"
        android:text="@string/_1_fwd"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9" />

    <ImageView
        android:id="@+id/iv_bowlselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:layout_toEndOf="@id/iv_batmanselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bowlselected"
        android:layout_alignStart="@+id/iv_bowlselected"
        android:layout_alignEnd="@+id/iv_bowlselected"
        android:gravity="center"
        android:text="@string/_1_def"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9" />

    <ImageView
        android:id="@+id/iv_arselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:layout_toEndOf="@id/iv_bowlselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_arselected"
        android:layout_alignStart="@+id/iv_arselected"
        android:layout_alignEnd="@+id/iv_arselected"
        android:gravity="center"
        android:text="@string/_1_mid"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9" />

    <ImageView
        android:id="@+id/iv_wkselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:layout_toEndOf="@id/iv_arselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_playerunselected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_wkselected"
        android:layout_alignStart="@+id/iv_wkselected"
        android:layout_alignEnd="@+id/iv_wkselected"
        android:gravity="center"
        android:text="@string/_1_gk"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9" />

    <ImageView
        android:id="@+id/iv_allselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_toEndOf="@id/iv_wkselected"
        android:contentDescription="@string/s3"
        android:src="@drawable/ic_notselectedcircle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_allselected"
        android:layout_alignStart="@+id/iv_allselected"
        android:layout_alignEnd="@+id/iv_allselected"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:gravity="center"
        android:text="@string/ready"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9" />


</RelativeLayout>