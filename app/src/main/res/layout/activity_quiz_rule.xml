<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_bg"
    tools:context=".rule.QuizRuleActivity">

    <include layout="@layout/actionbar"/>

    <include layout="@layout/footer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_video"
        android:layout_below="@+id/action_bar"
        android:text="@string/text_view_video"
        style="@style/ButtonPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_cod_help"
        android:layout_below="@+id/btn_view_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">
    </ImageView>

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_5"
        android:textSize="@dimen/text_13"
        android:textColor="@color/lighter_black"
        android:layout_below="@+id/iv_cod_help"
        android:layout_above="@+id/ll_bottom"/>

</RelativeLayout>