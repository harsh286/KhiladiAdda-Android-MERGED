<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter_black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_black"
        android:padding="@dimen/padding_15">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_select_favourites"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/colorWhite" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_freefire"
            style="@style/FavouriteImage"
            android:contentDescription="@string/text_free_fire"
            android:src="@drawable/fflb" />

        <ImageView
            android:id="@+id/iv_bgmi"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/menu_ludo"
            android:src="@drawable/bgmilb" />

        <ImageView
            android:id="@+id/iv_tdm"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/text_call_duty"
            android:src="@drawable/tdmlb" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ff_max"
            style="@style/FavouriteImage"
            android:contentDescription="@string/text_free_fire"
            android:src="@drawable/ffmaxlb" />

        <ImageView
            android:id="@+id/iv_hth"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/menu_ludo"
            android:src="@drawable/hthlb" />

        <ImageView
            android:id="@+id/iv_ludo"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/text_call_duty"
            android:src="@drawable/ludolb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:padding="@dimen/margin_3">

        <ImageView
            android:id="@+id/iv_ludoadda"
            style="@style/FavouriteImage"
            android:contentDescription="@string/text_free_fire"
            android:src="@drawable/ludoaddalb" />

        <ImageView
            android:id="@+id/iv_pubg_gobal"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/menu_ludo"
            android:src="@drawable/pubggoballb" />

        <ImageView
            android:id="@+id/iv_premium_esports"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/text_call_duty"
            android:src="@drawable/esportsperlb" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:padding="@dimen/margin_3">

        <ImageView
            android:id="@+id/iv_fanbattle"
            style="@style/FavouriteImage"
            android:contentDescription="@string/text_free_fire"
            android:src="@drawable/fanbattlelb" />

        <ImageView
            android:id="@+id/iv_quiz"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/menu_ludo"
            android:src="@drawable/quizlb" />

        <ImageView
            android:id="@+id/iv_clsq"
            style="@style/FavouriteImage"
            android:layout_marginStart="@dimen/margin_5"
            android:contentDescription="@string/text_call_duty"
            android:src="@drawable/clssqlb" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/dark_black"
        android:text="@string/text_update_error"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>