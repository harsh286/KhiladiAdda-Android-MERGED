<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70dp"
    android:layout_alignParentBottom="true"
    android:background="@color/footer_red"
    android:elevation="@dimen/card_elevation_5"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tournaments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_8"
        android:text="@string/title_tournaments"
        android:textColor="#80ffffff"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTint="#80ffffff"
        app:drawableTopCompat="@drawable/ic_trophy_hth2" />

    <TextView
        android:id="@+id/tv_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/title_trending"
        android:textColor="#80ffffff"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTint="#80ffffff"
        app:drawableTopCompat="@drawable/ic_trending" />

    <TextView
        android:id="@+id/tv_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_8"
        android:text="@string/text_categories"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTint="#ffffff"
        app:drawableTopCompat="@drawable/ic_category" />
</LinearLayout>