            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/productsansregular"
                android:text="Match 345"
                android:maxLines="2"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/materialCardView3"
                app:layout_constraintStart_toEndOf="@+id/mcv_quiz_image"
                app:layout_constraintTop_toTopOf="@+id/mcv_quiz_image" />

            <TextView
                android:id="@+id/tv_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/productsansregular"
                android:text="Category: Technology"
                android:textSize="@dimen/text_12"
                app:layout_constraintBottom_toBottomOf="@+id/mcv_quiz_image"
                app:layout_constraintStart_toEndOf="@+id/mcv_quiz_image" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView3"
                android:layout_width="83dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#71A750"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_name">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_trophy_hth"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_win"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0 Coins"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_11"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansregular"
                android:text="Attempts: 3/6"
                android:textColor="#8E8E8E"
                android:textSize="@dimen/text_11"
                app:layout_constraintBottom_toBottomOf="@+id/tv_categories"
                app:layout_constraintEnd_toEndOf="@+id/materialCardView3"
                app:layout_constraintTop_toTopOf="@+id/tv_categories" />

            <TextView
                android:id="@+id/tv_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/productsansregular"
                android:text="Participants"
                android:textColor="#1C1C1C"
                android:textSize="@dimen/text_11"
                app:layout_constraintStart_toStartOf="@+id/mcv_quiz_image"
                app:layout_constraintTop_toBottomOf="@+id/mcv_quiz_image" />

            <TextView
                android:id="@+id/tv_total_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/productsansregular"
                android:text="12/100"
                android:textColor="#1C1C1C"
                android:textSize="@dimen/text_11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcv_quiz_image" />


            <ProgressBar
                android:id="@+id/pb_joined"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:progressDrawable="@drawable/word_search_custom_progress_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_participants" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_entry"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="#3E6DC8"
                android:fontFamily="@font/productsansregular"
                android:text="Entry: 20 Coins"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pb_joined" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="#DA3A41"
                android:fontFamily="@font/productsansregular"
                android:text="Play Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_entry"
                app:layout_constraintTop_toBottomOf="@+id/pb_joined" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
