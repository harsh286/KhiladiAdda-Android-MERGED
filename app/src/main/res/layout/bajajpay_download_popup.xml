<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_bajaj_pay"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_50"
        android:background="@color/bajajpay_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:text="Install"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_cross_bp"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_16sp"
            android:src="@drawable/ic_cross"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_ndownload_bp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_corner_radius_4"
        android:layout_marginTop="@dimen/text_16"
        android:layout_marginEnd="@dimen/card_corner_radius_4"
        android:textAlignment="center"
        android:padding="@dimen/dimen_16sp"
        android:fontFamily="@font/productsansregular"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_8"
        android:text="@string/it_seems_like_you_do_not_have_account_on_bajaj_pay_wallet_in_order_to_add_amount_you_have_create_an_account_on_bajaj_pay_wallet"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_bajaj_pay" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iv_download_bp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_24"
        android:background="@drawable/shape_button_red"
        android:text="@string/text_download"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ndownload_bp" />

</androidx.constraintlayout.widget.ConstraintLayout>