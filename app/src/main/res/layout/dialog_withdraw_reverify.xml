<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/dialog_shape_version"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_name"
            style="@style/DialogHeadText"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_20"
            android:text="@string/text_alert"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="@string/text_withdraw_verify_help"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_shape"
                android:layout_marginStart="@dimen/margin_1"
                android:layout_marginEnd="@dimen/margin_1"
                android:padding="@dimen/padding_5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_aadhar"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_15"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_aadhar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/padding_8"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_13"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reverify_aadhar"
                    android:layout_marginTop="@dimen/margin_10"
                    style="@style/DialogHeadText"
                    android:background="@color/colorgreen"
                    android:text="@string/text_reverify_aadhar"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_1"
                android:layout_marginEnd="@dimen/margin_1"
                android:background="@drawable/dialog_shape"
                android:padding="@dimen/padding_5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_beneficiary"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_15"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/padding_8"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_13"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reverify_beneficiary"
                    android:layout_marginTop="@dimen/margin_10"
                    style="@style/DialogHeadText"
                    android:background="@color/colorgreen"
                    android:textSize="@dimen/text_15"
                    android:text="@string/text_reverify_beneficiary"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            style="@style/DialogHeadText"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/text_cancel"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>