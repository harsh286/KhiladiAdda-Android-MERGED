<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:background="@color/toolbar_gamer"
            android:gravity="center"
            android:text="Payment Status"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_failure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_20"
            android:fontFamily="@font/rowdies_regular"
            android:gravity="center"
            android:text="@string/text_failed"
            android:textColor="#272727"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ps" />


        <ImageView
            android:id="@+id/img_status_success"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_80"
            android:src="@drawable/cross_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_failure" />

        <TextView
            android:id="@+id/tv_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:text="fghfhg fffhfhfhfhf hfhfhffgfhdfgdgdfgdfgdfgfhf  hfhg gfhgf h hg fhffh gh fgh hf jf gn g f f hg hg kg h h hg h h gk gk jm hjk hjh jhjhjh kj mhb hmb mjb mjb hm kjh jhg jh hg hjg hjk kh hk h kkhb gkh jkhlhj nj k,bmbmbhmbhm bjm jk hjkj h ,hj h,j kh khj khubkubkuiubkbku "
            android:textAlignment="center"
            android:textColor="#272727"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="@dimen/text_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_status_success" />

        <Button
            android:id="@+id/btn_okay_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginTop="@dimen/card_corner_radius_4"
            android:layout_marginEnd="@dimen/margin_40"
            android:fontFamily="@font/rowdies_regular"
            android:gravity="center_horizontal|center_vertical"
            android:text="Okay"
            android:textAllCaps="false"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>