<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_15"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_prizepool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/text_prize_pool_breakup"
            android:textColor="@color/cb_background"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_prize_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_from"
            style="@style/HeadText"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rank" />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/HeadText"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_cash_prize" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_prize_pool_breakup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_40">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>