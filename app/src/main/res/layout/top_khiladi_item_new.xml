<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/top_khiladi_width"
    android:layout_height="@dimen/top_khiladi_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/top_khiladi_image_height"
        android:layout_height="@dimen/top_khiladi_image_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/app_logo"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorPrimaryDark"
        app:civ_shadow_radius="5" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:hint="@string/fan_battle"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_total_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/fan_battle"
        android:textColor="#52CF05"
        android:textSize="@dimen/text_11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/fan_battle"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        android:textStyle="bold" />

</LinearLayout>