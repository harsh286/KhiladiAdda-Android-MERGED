<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/dialog_shape_version"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_name"
            style="@style/DialogHeadText"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_20"
            android:text="@string/text_view_room_pwd"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="center"
            android:padding="@dimen/padding_2"
            android:text="@string/help_pubg_room_pwd"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_9" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/DialogEditText"
            android:layout_marginTop="@dimen/margin_10"
            android:drawableEnd="@drawable/ic_copy"
            android:gravity="center"
            android:hint="@string/hint_pubg_user_name" />

        <TextView
            android:id="@+id/tv_character"
            style="@style/DialogEditText"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:hint="@string/hint_pubg_character_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send"
            style="@style/DialogButton"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/ok" />

    </LinearLayout>

</RelativeLayout>
