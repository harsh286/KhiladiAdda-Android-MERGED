<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    android:padding="@dimen/padding_5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_width"
        android:scaleType="fitXY"
        android:contentDescription="@string/s3"
        android:src="@drawable/ludo_img" />

    <TextView
        android:id="@+id/tv_ludo_contest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/text_zero_double"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/text_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ludo_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/text_zero_double"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_ludo_loses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/text_zero_double"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_13" />

    </LinearLayout>
</LinearLayout>