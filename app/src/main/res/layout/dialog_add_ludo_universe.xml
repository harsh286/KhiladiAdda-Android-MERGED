<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogLinearLayoutLudoUni"
    android:background="@color/luod_uni_dialog_bg">

    <TextView
        android:id="@+id/tv_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ludo_uni_actionbar"
        android:gravity="center"
        android:padding="@dimen/padding_15"
        android:text="@string/text_add_challenge"
        android:textColor="@color/white"
        android:textSize="@dimen/text_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_amount"
            style="@style/CustomEditTextLudo"
            android:layout_marginBottom="@dimen/margin_20"
            android:digits="0123456789"
            android:drawableStart="@drawable/ic_coins"
            android:drawableTint="@color/black"
            android:hint="@string/help_coins"
            android:inputType="number"
            android:maxLength="6" />

        <include layout="@layout/select_coins_blue" />

        <include layout="@layout/select_coins_more_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:padding="@dimen/padding_5"
            android:text="@string/text_select_mode"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:padding="@dimen/padding_5"
            android:text="@string/text_ludo_multiple_coins"
            android:textColor="#7A768B"
            android:textSize="@dimen/text_9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set"
            style="@style/DialogButtonLudoUni"
            android:layout_marginTop="@dimen/margin_8"
            android:text="@string/text_add_challenge"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
