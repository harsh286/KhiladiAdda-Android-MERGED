<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_ps_bajaj_pay"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:background="@color/toolbar_gamer"
            android:gravity="center"
            android:text="Payment Status"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_failure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_20"
            android:fontFamily="@font/rowdies_regular"
            android:gravity="center"
            android:text="@string/text_failed"
            android:textColor="#272727"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ps_bajaj_pay" />


        <ImageView
            android:id="@+id/img_status_success"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_60"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@drawable/cross_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_failure" />

        <TextView
            android:id="@+id/tv_amt_failed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/text_12"
            android:layout_marginEnd="@dimen/margin_20"
            android:text="fghfhg  khlhj nj k,bmbmbhmbhm bjm jk hjkj h ,hj h,j kh khj khubkubkuiubkbku "
            android:textAlignment="center"
            android:textColor="#272727"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_status_success" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_okay_failure"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/text_12"
            android:background="@color/toolbar_gamer"
            android:fontFamily="@font/rowdies_regular"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Okay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amt_failed" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/text_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_ps_bajaj_pay"
            app:layout_constraintEnd_toEndOf="@id/tv_ps_bajaj_pay"
            app:layout_constraintTop_toTopOf="@id/tv_ps_bajaj_pay"
            app:srcCompat="@drawable/com_facebook_close" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>