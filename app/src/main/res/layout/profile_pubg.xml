            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_ludo_tournament"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/s3"
                android:src="@drawable/ludotmt_tournament_mainlogo" />

            <TextView
                android:id="@+id/tv_ludo_tournament"
                style="@style/ProfileHeadText"
                android:text="Ludo Tournament"
                android:layout_toStartOf="@+id/btn_ludo_tournament"
                android:layout_toEndOf="@+id/iv_ludo_tournament"
                android:padding="@dimen/padding_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ludo_tournament"
                style="@style/ProfileCredentialButtonPlay" />

        </RelativeLayout>

        <!--    Rummy    -->
        <RelativeLayout
            android:id="@+id/rl_rummy"
