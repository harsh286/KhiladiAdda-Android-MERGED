<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemCardAppearance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_pubg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_bgmi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/s3"
                android:src="@drawable/ic_bgmi" />

            <TextView
                android:id="@+id/tv_pubg"
                style="@style/ProfileHeadText"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_play_pubg"
                android:layout_toEndOf="@+id/iv_bgmi"
                android:padding="@dimen/padding_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_pubg"
                style="@style/ProfileCredentialButtonPlay" />

        </RelativeLayout>

<!--        <include layout="@layout/view_line_gray" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red_white" />

        <RelativeLayout
            android:id="@+id/rl_pubg_lite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_tdm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/s3"
                android:src="@drawable/tdm" />

            <TextView
                android:id="@+id/tv_pubg_lite"
                style="@style/ProfileHeadText"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_play_pubg_lite"
                android:layout_toEndOf="@+id/iv_tdm"
                android:padding="@dimen/padding_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_pubg_lite"
                style="@style/ProfileCredentialButtonPlay" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red_white" />
        <RelativeLayout
            android:id="@+id/rl_freefire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_freefire"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/s3"
                android:src="@drawable/ic_ff" />

            <TextView
                android:id="@+id/tv_freefire"
                style="@style/ProfileHeadText"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_play_ff"
                android:layout_toEndOf="@+id/iv_freefire"
                android:padding="@dimen/padding_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_ff"
                style="@style/ProfileCredentialButtonPlay" />


