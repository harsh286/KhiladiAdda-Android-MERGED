<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_black">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/games"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginEnd="@dimen/margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ludo_universe"
                    style="@style/DashboardLudoImageView"
                    android:src="@drawable/dash_lu" />

                <ImageView
                    android:id="@+id/iv_rummy"
                    style="@style/DashboardLudoImageView"
                    android:background="@drawable/ic_rummy_img" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="@dimen/margin_5"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_ludotournament"
                    style="@style/DashboardGameImageView"
                    android:src="@drawable/ludotmt_tournament_mainlogo" />

                <ImageView
                    android:id="@+id/iv_codepieces"
                    style="@style/DashboardGameImageView"
                    android:layout_margin="@dimen/margin_10"
                    android:src="@drawable/codepiece" />
                <ImageView
                    android:id="@+id/iv_ludo"
                    style="@style/DashboardGameImageView"
                    android:src="@drawable/ic_ludo_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="-24dp"
                android:layout_marginEnd="@dimen/margin_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_droido"
                    style="@style/DashboardGameImageView"
                    android:src="@drawable/dash_droid" />

                <ImageView
                    android:id="@+id/iv_wordsearch"
                    style="@style/DashboardGameImageView"
                    android:src="@drawable/dash_ws" />

                <ImageView
                    android:id="@+id/iv_quiz"
                    style="@style/DashboardGameImageView"
                    android:src="@drawable/ic_quiz_time" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="-6dp"
                android:text="@string/cricket"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_clashx"
                    style="@style/DashboardFantasyImageView"
                    android:src="@drawable/fantasy" />

                <ImageView
                    android:id="@+id/iv_fanbattle"
                    style="@style/DashboardFantasyImageView"
                    android:src="@drawable/fanbattle_live" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:text="@string/text_esports"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_dashboard_height"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_freefire"
                    style="@style/DashboardLeagueVerticalImageView"
                    android:src="@drawable/ic_ff" />

                <ImageView
                    android:id="@+id/iv_bgmi"
                    style="@style/DashboardLeagueVerticalImageView"
                    android:layout_marginStart="@dimen/margin_2"
                    android:src="@drawable/ic_bgmi" />

                <ImageView
                    android:id="@+id/iv_ff_max"
                    style="@style/DashboardLeagueVerticalImageView"
                    android:layout_marginStart="@dimen/margin_3"
                    android:src="@drawable/freefire_max" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_ff_clash"
                    style="@style/DashboardLeagueImageView"
                    android:src="@drawable/ff_clashs" />

                <ImageView
                    android:id="@+id/iv_tdm"
                    style="@style/DashboardLeagueImageView"
                    android:src="@drawable/tdm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_pubg_gobal_lite"
                    style="@style/DashboardLeagueImageView"
                    android:src="@drawable/pubg_gobal_lite" />

                <ImageView
                    android:id="@+id/iv_esportsperimum"
                    style="@style/DashboardLeagueImageView"
                    android:src="@drawable/esports_per" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_50"
                    android:background="@drawable/top_khiladi_bg"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_top_khiladi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_15" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:contentDescription="@string/s3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/top_khiladi" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/footer_home" />

</RelativeLayout>