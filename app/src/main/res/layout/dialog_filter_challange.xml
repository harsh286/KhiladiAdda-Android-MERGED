<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/dialog_shape_version"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_name"
            style="@style/DialogHeadText"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_20"
            android:text="@string/text_filter"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/color_yellow"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="@string/help_filter_challenge"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text_9"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginEnd="@dimen/margin_35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fifty"
                style="@style/TextFilterLudo"
                android:text="@string/text_ten_hundred" />

            <TextView
                android:id="@+id/tv_hundred"
                style="@style/TextFilterLudo"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/text_hundred_five" />

            <TextView
                android:id="@+id/tv_two_hundred"
                style="@style/TextFilterLudo"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/text_five_one" />

            <TextView
                android:id="@+id/tv_five_hundred"
                style="@style/TextFilterLudo"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/text_one_five" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lowest"
                style="@style/ButtonGreyRedCoin"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_weight="1"
                android:text="@string/text_lowest_highest" />

            <TextView
                android:id="@+id/tv_highest"
                style="@style/ButtonGreyRedCoin"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_weight="1"
                android:text="@string/text_highest_lowest" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                style="@style/DialogButtonWeight"
                android:layout_marginEnd="@dimen/margin_8"
                android:text="@string/text_cancel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set"
                style="@style/DialogButtonWeight"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/text_confirm" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
