    <TextView
        android:id="@+id/tv_download"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_30"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ludoadda_download"
        android:elevation="@dimen/margin_5"
        android:fontFamily="@font/productsansregular"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/text_download"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/img_rules"
        app:layout_constraintEnd_toStartOf="@+id/img_rules"
        app:layout_constraintTop_toTopOf="@+id/img_rules" />

    <TextView
        android:id="@+id/img_rules"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_30"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ludoadda_download"
        android:fontFamily="@font/productsansregular"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="@string/text_view_ludo_video"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rl_wallet"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_30"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ludoadda_download"
        android:elevation="@dimen/margin_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_rules"
        app:layout_constraintEnd_toStartOf="@+id/img_rules"
        app:layout_constraintTop_toTopOf="@+id/img_rules">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:contentDescription="@string/s3"
            android:src="@drawable/ic_wallet" />

        <TextView
            android:id="@+id/tv_total_wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

