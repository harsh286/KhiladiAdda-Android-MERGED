<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/dialog_shape_version"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_name"
            style="@style/DialogHeadText"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_20"
            android:text="@string/text_information"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ifsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

        <include layout="@layout/view_line_gray" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="@string/text_withdraw_help"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:checked="true"
            android:text="@string/text_withdraw_verification_check" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                style="@style/DialogHeadText"
                android:layout_weight="1"
                android:background="@color/colorgreen"
                android:text="@string/text_cancel"
                android:textColor="@color/colorWhite" />

            <include layout="@layout/view_line_gray_vertical"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_proceed"
                style="@style/DialogHeadText"
                android:layout_weight="1"
                android:background="@color/colorgreen"
                android:text="@string/text_proceed"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>