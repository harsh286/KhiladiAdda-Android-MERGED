<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogLinearLayout">

    <TextView
        android:id="@+id/tv_msg"
        style="@style/DialogHeadText"
        android:text="@string/text_wallet_details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/border_grey"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            style="@style/WalletTextViewOne"
            android:layout_marginStart="@dimen/margin_3"
            android:text="@string/text_entry_fee" />

        <TextView
            android:id="@+id/tv_entry_fee"
            style="@style/WalletTextViewTwo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/border_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            android:id="@+id/tv_total_wallet"
            style="@style/WalletTextViewOne"
            android:layout_marginStart="@dimen/margin_3"
            android:text="@string/text_total_wallet_bal" />

        <TextView
            android:id="@+id/tv_total_wallet_entry"
            style="@style/WalletTextViewTwo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/border_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            android:id="@+id/tv_wallet"
            style="@style/WalletTextViewOne"
            android:layout_marginStart="@dimen/margin_3"
            android:text="@string/text_deposit_winning" />

        <TextView
            android:id="@+id/tv_wallet_entry"
            style="@style/WalletTextViewTwo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/border_grey"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            android:id="@+id/tv_bonus"
            style="@style/WalletTextViewOne"
            android:layout_marginStart="@dimen/margin_3"
            android:text="@string/text_bonus" />

        <TextView
            android:id="@+id/tv_bonus_entry"
            style="@style/WalletTextViewTwo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/border_grey"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5">

        <TextView
            android:id="@+id/tv_total"
            style="@style/WalletTextViewOne"
            android:layout_marginStart="@dimen/margin_3"
            android:text="@string/text_total_coins" />

        <TextView
            android:id="@+id/tv_total_entry"
            style="@style/WalletTextViewTwo" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center"
        android:text="@string/text_insufficient_bal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_13"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            style="@style/DialogButtonWeight"
            android:layout_marginEnd="@dimen/margin_8"
            android:text="@string/text_cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send"
            style="@style/DialogButtonWeight"
            android:layout_marginStart="@dimen/margin_8"
            android:text="@string/text_confirm" />
    </LinearLayout>

</LinearLayout>
