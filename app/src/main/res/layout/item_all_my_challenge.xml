<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/card_corner_radius_10"
    app:cardElevation="@dimen/card_elevation_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contest_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_2"
                android:textColor="@color/orange_dark"
                android:textSize="@dimen/text_9"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_mode"
                style="@style/TextLudoMode" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:minLines="2"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/lighter_black"
            android:textSize="@dimen/text_11" />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_profile_player"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/margin_2"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/colorPrimaryDark"
            app:civ_shadow_radius="5" />
        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_11" />
        <TextView
            android:id="@+id/tv_wining_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_11" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:background="@color/color_green"
            android:text="@string/text_update_room_code"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_5"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/text_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:background="@color/color_yellow"
            android:text="@string/text_ludo_result_declared_error"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_11" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>