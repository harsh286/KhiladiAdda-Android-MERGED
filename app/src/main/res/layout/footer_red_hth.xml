<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#DA3A41"
    android:elevation="@dimen/card_elevation_5"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/card_corner_radius_4">

    <TextView
        android:id="@+id/tv_league"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_8"
        android:text="@string/text_my_match"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_trophy" />

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/title_home"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_home_black_24dp" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_8"
        android:text="@string/text_chat_support"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_chat_support" />
</LinearLayout>