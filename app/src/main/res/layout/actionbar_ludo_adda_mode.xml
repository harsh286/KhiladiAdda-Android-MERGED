<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_red"
    android:background="@color/ludo_uni_actionbar"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_15"
        android:contentDescription="@string/text_no"
        android:src="@drawable/ic_arrow_back_white" />

    <TextView
        android:id="@+id/tv_activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toStartOf="@+id/tv_download"
        android:layout_toEndOf="@+id/iv_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_17" />

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_30"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_toStartOf="@id/tv_help_video"
        android:background="@drawable/ludoadda_download"
        android:elevation="@dimen/margin_5"
        android:fontFamily="@font/productsansregular"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/text_download"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_help_video"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_30"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_15"
        android:background="@drawable/ludoadda_download"
        android:fontFamily="@font/productsansregular"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="@string/text_view_ludo_video"
        android:textColor="@color/white" />


</RelativeLayout>