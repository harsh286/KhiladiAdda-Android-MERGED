<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/dialog_shape_version"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_name"
            style="@style/DialogHeadText"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_20"
            android:text="@string/hint_user_name"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_room_id"
            style="@style/CustomEditTextLudo"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_5"
            android:autofillHints="@string/hint_ludoking_username"
            android:drawableStart="@drawable/ic_gaming"
            android:drawableTint="@color/colorBlack"
            android:hint="@string/hint_ludoking_username"
            android:maxLength="10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set"
            style="@style/DialogButton"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/text_update" />

    </LinearLayout>

</RelativeLayout>
