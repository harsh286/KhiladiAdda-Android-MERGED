<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_paytm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    android:visibility="gone"
    android:background="@drawable/ic_selector_merchant">

    <ImageView
        android:id="@+id/iv_paytm"
        android:layout_width="@dimen/margin_90"
        android:layout_height="@dimen/margin_60"
        android:contentDescription="@string/s3"
        android:padding="@dimen/padding_15"
        android:src="@drawable/ic_paytm_upi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_paytm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="@string/paytm_upi_new"
        android:textSize="@dimen/text_11"
        android:textColor="@color/black" />



</RelativeLayout>