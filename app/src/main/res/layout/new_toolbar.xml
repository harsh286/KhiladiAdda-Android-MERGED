<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_60"
    android:background="@drawable/toolbar_shadow">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_back_arrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_20"
        app:cardBackgroundColor="@color/droido_toolbar_back_button_bg"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:contentDescription="@string/s3"
            android:src="@drawable/pwe_ic_back" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_title"
        android:layout_width="150dp"
        android:layout_height="30dp"
        app:cardBackgroundColor="@color/droido_toolbar_back_button_bg"
        app:cardCornerRadius="@dimen/margin_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/iv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rowdies_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_cross_arrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin_20"
        android:visibility="gone"
        app:cardBackgroundColor="@color/droido_toolbar_back_button_bg"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_cross_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_history" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/img_rules"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_info"
        android:text="@string/text_rules"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12"
        android:textStyle="bold"
        android:visibility="gone"
        android:contentDescription="@string/s3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>

