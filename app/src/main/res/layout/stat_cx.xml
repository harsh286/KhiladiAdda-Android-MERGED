<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_width"
        android:contentDescription="@string/s3"
        android:scaleType="fitXY"
        android:src="@drawable/clashx" />

    <TextView
        android:id="@+id/tv_cx_contest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_3"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Contests\n00"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/text_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cx_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Win\n00"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_cx_loses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Losses\n00"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_13" />
    </LinearLayout>
</LinearLayout>
